{
    "extends": ["airbnb-base", "plugin:prettier/recommended", "react-app"],
    "env": {
        "es6": true,
        "jest": true
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "no-console": "warn",
        "camelcase": "off",
        "no-extra-boolean-cast": "off",
        "class-methods-use-this": "off",
        "radix": "off",
        "consistent-return": "off",
        "no-underscore-dangle": "off",
        "no-var": ["error"],
        "semi": ["error", "always"],
        "comma-dangle": ["error", "never"],
        "curly": ["error", "all"]
    }
}
